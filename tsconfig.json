    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "baseUrl": "./src/",
    "typeRoots": ["./node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ]
}